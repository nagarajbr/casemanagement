<fieldset>
<section class="solidbody">
	<legend> <%= set_subheader(" Enter #{drop_down_value_description(@action_plan_detail.activity_status)} activity hours for: #{client_full_name(@client)}") %> </legend>

	<%= render "shared/common_error", object_argument: @activity_hours_errors %>
	<%= render "shared/common_warning", object_argument: @warnings %>
	<%#= render "parent_action_plan_detail" %>
	<% if @activity_hours.present? %>
		<%= form_for :activity_hour, :url => create_new_participation_hours_path(@action_plan.id,@action_plan_detail.id), method: :post do |f| %>
			<%= render 'form', activity_hours: @activity_hours, action_plan_detail: @action_plan_detail %>
			<%= link_to 'Cancel', client_activities_path,class: "secondary button radius" %>
			<%= f.submit "Save", class: 'button radius'%>
		<%end%>
	<% else %>
	  <h5 class="subheader">No participation hours found.</h5><br>
	  <%= link_to 'Back', client_activities_path ,class: "secondary button radius" %>
    <%end%>
</section>
</fieldset>