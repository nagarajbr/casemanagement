<%= form_for(@parent_rspability, :url => client_parental_rspabilities_path, method: :post) do |f| %>
<fieldset>
	<section class="solidbody">
	   <legend><%= set_subheader("Enter parental responsibility information for: #{client_full_name(@client)}") %></legend>
       <%= render "shared/common_error", object_argument: @parent_rspability %>
        <ul>
	     	<div class="row">
	          <div class="large-4 columns">
	               <%= render 'form',arg_object: f,arg_dropdown: @parent_dropdown_values,arg_notes: @notes  %>
		 	  </div>
		    </div>
		</ul>
	    <p>
	     	<%= link_to 'Cancel', client_parental_rspabilities_path,class: "secondary button radius" %>
	     	<%= f.submit "Save",class: 'button radius'%>
	    </p>
	</section>
</fieldset>

<% end %>



