  <body onload = "set_service_type()">
    <ul>
      <div class="row">
        <div class="large-4 columns">
          <li class="required">
            <%= arg_object.label :service_program_group %>
            <%= arg_object.select :service_program_group, ServiceProgram.get_tanf_service_programs.collect { |p| ["#{p.description} ", p.id] },{ :include_blank => 'Select a service program'}, id: "service_program_group", onchange: "set_service_type()" %>
          </li>

          <li  class="required" >
            <%= arg_object.label :cost_center %>
            <%= arg_object.text_field :cost_center %>
          </li>

          <li  class="required" >
            <%= arg_object.label :internal_order %>
            <%= arg_object.text_field :internal_order %>
          </li>

          <li  class="required" >
            <%= arg_object.label :gl_account %>
            <%= arg_object.text_field :gl_account %>
          </li>

          <div id="div_service_type">
            <li class="required">
              <%= arg_object.label :service_type %>
              <%= arg_object.select :service_type, CodetableItem.item_list(168,"service type").collect { |p| ["#{p.short_description} ", p.id] },{ :include_blank => 'Select service type' }%>
            </li>
          </div>
        </div>
      </div>
    </ul>
</body>