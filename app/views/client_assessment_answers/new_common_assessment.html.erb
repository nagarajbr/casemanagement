
<fieldset>
	<section class="solidbody">
		<% if session[:CLIENT_ID].present? %>
			<legend><%= set_subheader("Enter assessment information for: #{client_full_name(@client)}") %> </legend>
				<P>
				<%#= render  "selected_assessment" %>
				</P>
				<%= form_for(@common_assessment_answer_object, :url => create_common_assessment_path(@sub_section_id,@assessment_id), method: :post) do |f| %>
				   <P><%= render "shared/common_error", object_argument: @common_assessment_answer_object %></p>
				        <ul>
					     	<div class="row">
					          <div class="large-12 columns">
					             <%= render 'form',arg_object: f ,arg_assessment_que: @assessment_questions,arg_assessment_id:@assessment_id%>
						 	  </div>
						    </div>
						</ul>
					    <p>

							     <%if !(@client_assessment.first_step?)%>
									 <%= link_to "Previous", process_previous_step_path,class: 'button' %>
								 <%end%>
								 <%= f.submit "Save",:name => "save_button",class: 'button radius' %>
								 <%if !(@client_assessment.last_step?)%>
								 	<%= f.submit "Next", :name => "next_button",class: 'button radius' %>
								 <%end%>
								 <%#= f.submit "Generate Assessment Sheet",:name => "generate_assessment_button",class: 'button radius' %>


					    </p>
				 <% end %>
		<%else%>
			<legend><%= set_subheader("Enter assessment information ") %> </legend>
			 <h5 class="subheader">Client is not selected, Select client by clicking Search Client button.</h5>
			        <p></p>
			        <%= render "shared/search_client_button" %>
		<%end%>

	 </section>
 </fieldset>

