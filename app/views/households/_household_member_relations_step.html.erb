<% if @household_members_count > 1 %>


	<% if @client_relations.present? %>

		<table>
		  <thead>
		    <tr>
				<th> Household Member </th>
				<th> Relationship </th>
				<th> Household Member</th>

			</tr>
		  </thead>
		    <tbody>
				<% @client_relations.each do |arg_reln| %>
					<tr>
						<td>  <%= "#{get_client_full_name(arg_reln.to_client_id)} is" %></td>
