	<% else %>
			 <h5 class="subheader"> Set up the relationship between household members by clicking 'Manage Relationships' button.</h5>
			<p></p>

			<p>
			   <%= link_to "Manage Relationships",edit_household_member_multiple_relationship_path(@household.id), class: 'button radius' %>
			</p>
	<%end%>

<% else %>
