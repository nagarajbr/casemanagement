<fieldset>
	<section class="solidbody">
	    <legend><%= set_subheader("Enter parental responsibility information for: #{client_full_name(@client)}") %></legend>
		<%= form_for(@parent_rspability, :url => create_absent_parent_responsibility_information_path(@absent_parent.id), method: :post) do |f| %>
		       <%= render "shared/common_error", object_argument: @parent_rspability %>
		        <ul>
			     	<div class="row">
			          <div class="large-4 columns">
			               <%= render 'form',arg_object: f,arg_notes: @notes,arg_absent_parent: @absent_parent  %>
				 	  </div>
				    </div>
				</ul>
			    <p>
			     	<%= link_to 'Back', start_household_absent_parents_wizard_path,class: "secondary button radius" %>
			     	<%= f.submit "Save",class: 'button radius'%>
			    </p>
		<% end %>
	</section>
</fieldset>