
<fieldset>
<section class="solidbody">
<legend><%= set_subheader("Reject Agreement for provider: #{provider_name(@provider)}" ) %></legend>
<%= render "providers/selected_provider" %>
<%= form_for(@provider_agreement,:url => provider_agreement_reject_update_path, method: :patch) do |f| %>
 <%= render "shared/common_error", object_argument: @provider_agreement %>
  <ul>
    <%= render "show_provider_agreement_details" %>
       <div class="row">
         <div class="large-4 columns">

        			<li class="required">
        			  <%= f.label :reason %>
        			   <%= f.text_area :reason, cols: 40, rows: 7, maxlength: "255" %>
        			</li>

          </div>
       </div>

    </ul>
      <%= link_to 'Cancel',provider_agreements_show_path(@provider_agreement.id), class: "secondary button radius" %>
      <%= f.submit "Save", class: 'button radius'%>

<% end %>
</section>
</fieldset>