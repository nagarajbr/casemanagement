<table>
	<caption style="text-align:inherit">
		<b> Household registration status for: <%= get_client_full_name(arg_client_id) %> </b>
		<p></p>
	</caption>
  	<thead>
	    <tr>
			<th> Information </th>
			<th> Status </th>
			<th> Action </th>
		</tr>
  	</thead>
  	<tbody>
	  	<% arg_steps.each do |each_step| %>
	  		<tr>
	  			<td>  <%= each_step.step_name %>  </td>
				<td>  <%= each_step.step_complete_flag_description %></td>
				<td>  <%= link_to("select", navigate_to_selected_step_path(each_step.id) , id: "hyperlink") %></td>
	  		</tr>
	  	<% end %>
  	</tbody>
</table>