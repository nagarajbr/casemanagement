

<%= form_for @work_queue_user_subscription_object, url: update_work_queue_user_subscription_path(@work_queue_user_subscription_object.user_id,@work_queue_user_subscription_object.local_office_id), method: :put do |f| %>

<section class="solidbody">
	<fieldset>
	     <legend>
	     	<%= set_subheader("Edit User's Queue Subscription information") %>
         </legend>
	     <br><%= render "shared/common_error", object_argument: @work_queue_user_subscription_object %><br>

	     <p>
	        <b>User: </b>
	        <%=  @user_name %>
	    </p>
	    <p>
	        <b>local office: </b>
	        <%=  @users_local_office_name %>
	    </p>

        <p></p>
        <fieldset>
        <div class="required">
		  <legend class="radiolegend"> Queue </legend>
		</div>
		<br>

        <div class="row">
				<div class="large-8 column">
			         <div class="checkbox-style">
			        	<%#= hidden_field_tag("work_queue_local_office_subscription[queue_types][]",nil) %>
						<% @all_queues.each do |each_queue|%>
							<%= check_box_tag("work_queue_user_subscription[queue_types][]",
							                   each_queue.id,
							                   @user_queues_in_db_array.include?(each_queue.id)
							                )
							%>
							<%= each_queue.short_description%>
							<br>
						<% end %>
			        </div>
			    </div>
		</div>

        </fieldset><br>

       <p>
       		<%= link_to 'Cancel', work_queue_user_subscriptions_index_path,class: "button secondary radius" %>
            <%= f.submit "Save", class: 'button radius' %>
	    </p>
	</fieldset>
	 </section>
<% end %>