<section class="solidbody">
	<%= form_for(@client_doc_verification,:url => create_focus_client_document_path(@client_doc_verification.id), method: :post) do |f| %>
  <%= render "shared/common_error", object_argument: @client_doc_verification %>
    <fieldset>
    	<legend><%= set_subheader("New document for client: #{client_full_name(@client)}") %></legend>
    	<ul>
	     	<div class="row">
	          <div class="large-6 columns">
	               <%= render 'form_focus_client_doc_verification.html',arg_object: f %>
		 	  </div>
		    </div>
		</ul>
	    <p>
	    	<%= link_to "Cancel",index_focus_client_documents_path,class: 'secondary button radius'%>

	       <%= f.submit "Save",class: 'button radius'%>
	        </p>

    </fieldset>
<% end %>
</section>