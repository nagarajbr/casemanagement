<section class="solidbody">
	<fieldset>
	<%= render 'application_screenings/selected_application_details', arg_selected_application:@client_application %>

<legend><%= set_subheader("Verified Document details") %></legend>

	<p>
		<b>Application Member: </b>
		<%= get_client_full_name(@client_doc_verification.client_id) %>
	</p>

	<p>
		<b>Document Type: </b>
		<%=  drop_down_value_description(@client_doc_verification.document_type) %>


	</p>
	<p>
		<b>Verification Date: </b>
		<%= format_db_date(@client_doc_verification.document_verfied_date) %>


	</p>


<%= link_to 'Back', document_verification_index_path(@client_application.id),class: "secondary button radius" %>
<%# if validate_authorization(327) %>
	<%= link_to 'Delete', delete_client_doc_verfication_path(@client_application.id,@client_doc_verification.id), method: :delete, data: { confirm: 'Are you sure?' },class: "button alert radius" %>
<%# end %>
<%# if validate_authorization(667) %>
	<%= link_to "Upload","#",class: 'button radius'%>
<%# end %>
<%# if validate_authorization(326) %>
	<%= link_to 'Edit', edit_client_doc_verfication_path(@client_application.id,@client_doc_verification.id),class: "button radius" %>
<%# end %>
</fieldset>
</section>