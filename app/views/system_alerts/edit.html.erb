<fieldset>
  <section class="solidbody">

	<%= set_subheader("Edit alert information") %>
	<fieldset>
	    <%= form_for(@alerts, url: system_alerts_edit_path,:method => :put) do |f| %>
		    <%= render "shared/common_error", object_argument: @alerts %>
		    <ul>
		      <div class="row">
		        <div class="large-4 columns">
					<%= render 'form',arg_object: f  %>
		        </div>
		      </div>
		    </ul>

		    <p>
		    	<%= link_to 'Cancel', system_alerts_show_path(@alerts.id),class: "secondary button radius" %>
		    	<%= f.submit "save", class: 'button radius' %>
		    </p>

	    <% end %>
	  </fieldset>

  </section >
</fieldset>