  <% if @client_doc_verification_list.present? %>

  <p></p>
    <table>
      <caption style="text-align:inherit"><b> Verified Documents of Application Members</b><p></p></caption>
                <thead>
                    <tr>
                      <th> Application Member </th>
                      <th> Document Type </th>
                      <th> Verification Date </th>
                      <th>                   </th>
                    </tr>
                </thead>
                <tbody>
                     <% @client_doc_verification_list.each do |arg_doc| %>
                        <tr>
                          <td>  <%= get_client_full_name(arg_doc.client_id) %></td>
                          <td>  <%= drop_down_value_description(arg_doc.document_type) %></td>
                          <td>  <%=  format_db_date(arg_doc.document_verfied_date) %></td>
                            <td><%= link_to "Delete",delete_verification_document_path(@selected_application.id,arg_doc.id), method: :delete, data: { confirm: 'Are you sure?' },id: "hyperlink_alert" %></td>


                        </tr>
                     <% end %>
                </tbody>
          </table>
  <% else %>
         <h5 class="subheader"><br>Verification documents are not currently added for members in the application. Click Add Document button to add a verification document.</h5><br>
  <% end %>
  <%  can_logged_in_user_edit?("CLIENT_APPLICATION",@selected_application.id)%>
    <%= link_to 'Add Document',new_verification_document_path(@selected_application.id), class: "button radius"%>
  <% end %>
