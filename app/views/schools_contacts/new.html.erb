<fieldset>
	<section class="solidbody">
		<legend><%= set_subheader("Enter contact information for school: #{@school.school_name}") %></legend>
		<%= form_tag create_schools_contact_path, method: :post do %>
			<% if session[:SCHOOLS_ID].present? %>
			    <%= render "shared/common_error", object_argument: @phones_error_messages %>
			    <ul>
			       <div class="row">
			         <div class="large-4 columns">
						<%= render '/phones/form',arg_primary:@primary_phone,arg_secondary: @secondary_phone,arg_other:@other_phone,arg_email:@email,arg_entity_type:@entity_type,arg_notes:@notes  %>
						</div>
			       </div>
			    </ul>
			    <p>
			      <%= link_to "Cancel", show_schools_contact_path ,class: 'button secondary' %>
			      <%= submit_tag "Save", class: "button radius" %>
			    </p>
			<% else %>
			   <h5 class="subheader">School is not selected, Select a school by clicking Search button.</h5><br>
        <p></p>
        <%= link_to 'Search', schools_search_path,class: "button radius" %>
			<% end %>
		<% end %>
	</section>
</fieldset>