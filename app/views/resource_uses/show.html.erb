<fieldset>
  <section class="solidbody">
    <% if  @menu == 'HOUSEHOLD_MEMBER_STEP_WIZARD' %>
          <legend><%= set_subheader("Resource use detail for household member: #{client_full_name(@client)}") %></legend>
        <p>
          <%= (render 'households/selected_household_partial',arg_household: @household) if @household.present?%>
          <%= render "resource_adjustments/parent_resource",arg_resource: @resource  %>
          <%= render "resource_adjustments/parent_resource_detail",arg_resource_detail:@resource_detail %>
        </p>
    <% else %>
        <p>
            <%= render "resource_adjustments/parent_resource",arg_resource: @resource  %>
            <%= render "resource_adjustments/parent_resource_detail",arg_resource_detail:@resource_detail %>
        </p>
           <legend><%= set_subheader("Resource use detail for: #{client_full_name(@client)}") %> </legend>
    <% end %>







     <p>
      <b>Usage Code: </b>
      <%= CodetableItem.item_description(63,@resource_use.usage_code,"Usage Code") %>
    </p>

     <% if  @menu == 'HOUSEHOLD_MEMBER_STEP_WIZARD' %>
        <%= link_to 'Back',household_member_resource_detail_uses_index_path(@client.id,@resource_detail.id,'HOUSEHOLD_MEMBER_STEP_WIZARD'),class: "secondary button radius" %>
        <%= link_to 'Edit',edit_household_member_resource_detail_usage_path(@client.id,@resource_detail.id,@resource_use.id,'HOUSEHOLD_MEMBER_STEP_WIZARD'),class: "button radius" %>
        <%= link_to 'Delete',delete_household_member_resource_detail_usage_path(@client.id,@resource_detail.id,@resource_use.id,'HOUSEHOLD_MEMBER_STEP_WIZARD'), method: :delete, data: { confirm: 'Are you sure?' },class: "button alert radius" %>
     <% else %>
        <%= link_to 'Back',index_resource_uses_path(@resource_use.resource_details_id),class: "secondary button radius" %>
        <%= link_to 'Edit',edit_resource_uses_path(@resource_use.id),class: "button radius" %>
        <%= link_to 'Delete',destroy_resource_uses_path(@resource_use.id), method: :delete, data: { confirm: 'Are you sure?' },class: "button alert radius" %>
     <% end %>



  </section>
</fieldset>